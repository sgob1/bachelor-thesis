% General
\setbeamercolor{normal text}{fg=uniudBrown}
\setbeamercolor{structure}{fg=uniudBlueDark}
\setbeamercolor{alerted text}{fg=uniudOrange}
\setbeamercolor{example text}{fg=white}
\setbeamercolor{copyright text}{fg=uniudBlueLight}
\setbeamercolor{palette primary}{fg=uniudBlueDark}
\setbeamercolor{palette secondary}{fg=uniudBlueDark, bg=uniudBrownLight}
\setbeamercolor{palette tertiary}{fg=uniudBrownLight, bg=uniudBlueDark}
\setbeamercolor{palette quaternary}{fg=white, bg=uniudOrange}
% Titlepage
\setbeamercolor{title}{parent=normal text}
\setbeamercolor{subtitle}{parent=normal text}
\setbeamercolor{institute}{parent=normal text}
% Content
\setbeamercolor{frametitle}{parent=palette quaternary}
% Blocks
\setbeamercolor{block title}{parent=palette tertiary}
\setbeamercolor{block body}{parent=palette secondary}
\setbeamercolor{block title example}{fg=white, bg=uniudSec1Dark}
\setbeamercolor{block body example}{fg=white, bg=uniudSec1}
\setbeamercolor{block title alerted}{fg=white, bg=uniudOrangeDark}
\setbeamercolor{block body alerted}{fg=white, bg=uniudOrangeLight}
% Notes
\setbeamercolor{note page}{fg=uniudBlueDark,bg=white}
\setbeamercolor{note title}{fg=white, bg=uniudBlueDark}
\setbeamercolor{note date}{parent=note title}
% Page Number
\setbeamercolor{page number in head/foot}{fg=uniudBlueDark}

